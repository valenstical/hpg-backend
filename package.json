{
  "name": "hpg-backend",
  "version": "1.0.0",
  "description": "Backend server for HPG Mobile App",
  "main": "src/server.js",
  "scripts": {
    "start:dev": "NODE_ENV=development nodemon --exec babel-node src/server.js",
    "start:prod": "NODE_ENV=production nodemon --exec babel-node src/server.js",
    "build": "babel src -d dist",
    "start": "node dist/server.js",
    "heroku-postbuild": "npm run build",
    "migrate": "sequelize db:migrate",
    "migrate:undo": "sequelize db:migrate:undo",
    "migrate:refresh": "sequelize db:migrate:undo:all",
    "migrate:create": "sequelize migration:generate --name",
    "seed:products": "nodemon --exec babel-node src/seeds/products.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/valenstical/hpg-backend.git"
  },
  "keywords": [
    "nodejs",
    "express",
    "postgresql",
    "sequelize"
  ],
  "author": "Valentine Okosun",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/valenstical/hpg-backend/issues"
  },
  "homepage": "https://github.com/valenstical/hpg-backend#readme",
  "dependencies": {
    "@babel/polyfill": "^7.10.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.17.1",
    "express-validator": "^5.3.1",
    "handlebars": "^4.7.6",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "moment": "^2.27.0",
    "multer": "^1.4.2",
    "node-fetch": "^2.6.1",
    "nodemailer": "^6.4.10",
    "nodemailer-smtp-transport": "^2.7.4",
    "pdfcrowd": "^4.12.0",
    "pg": "^7.18.2",
    "pg-hstore": "^2.3.3",
    "pingmydyno": "^1.5.1",
    "random-int": "^2.0.1",
    "request": "^2.88.2",
    "request-promise": "^4.2.5",
    "sequelize": "^5.22.2",
    "sequelize-cli": "^5.5.1",
    "urlencode": "^1.1.0",
    "cheerio": "^1.0.0-rc.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/node": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/register": "^7.10.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "nodemon": "^1.19.4"
  }
}
